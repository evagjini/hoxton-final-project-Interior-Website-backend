// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  lastName String
  email    String    @unique
  password String
  comments Comment[]
  likes    Likes[]
}

model Blog {
  id         Int       @id @default(autoincrement())
  title      String
  category   Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  designer   Designer  @relation(fields: [designerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  designerId Int
  comments   Comment[]
  likes      Likes[]
  categoryId Int
  images     Image[]
  created_at DateTime
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  blogs Blog[]
}

model Designer {
  id       Int    @id @default(autoincrement())
  name     String
  lastName String
  email    String @unique
  password String
  blogs    Blog[]
}

model Comment {
  id      Int    @id @default(autoincrement())
  comment String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  blog    Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId  Int
  blogId  Int
}

model Likes {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  blog   Blog @relation(fields: [blogId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId Int
  blogId Int
}

model Image {
  id          Int    @id @default(autoincrement())
  image       String
  description String
  blog        Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  blogId      Int
}
